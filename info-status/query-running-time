*/
QUERY PARA CONOCER EL TIEMPO Y PORCENTAJE DE AVANCE DE UNA SOLICITUD DE EJECUCION
EN PARTICULAR. EN ESTE CASO, LA OPERACION DBCC FILES COMPACT
/*
SELECT 
		A.NAME,B.TOTAL_ELAPSED_TIME/60000 AS [Running Time],
		B.ESTIMATED_COMPLETION_TIME/60000 AS [Remaining],
		B.PERCENT_COMPLETE as [%],
		(SELECT TEXT FROM sys.dm_exec_sql_text(B.SQL_HANDLE)) AS COMMAND 
FROM	MASTER..SYSDATABASES A, sys.dm_exec_requests B
WHERE	A.DBID=B.DATABASE_ID AND 
		B.COMMAND LIKE '%DbccFilesCompact%'
ORDER BY percent_complete desc,
		 B.TOTAL_ELAPSED_TIME/60000 desc
